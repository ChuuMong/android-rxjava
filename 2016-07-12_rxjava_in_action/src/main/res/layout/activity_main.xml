<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/constraintLayout3">

    <Button
        android:id="@+id/btn_activity_main_view_pager"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Pager"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout3"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/btn_activity_main_view_pager_with_interval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="View Pager - with Interval"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_main_view_pager"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btn_activity_main_view_pager_interval_drag_handling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/view_pager_interval_drag_handling"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_main_view_pager_with_interval"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:text="@string/visibility_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_activity_main_visibility_event"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_activity_main_view_pager_interval_drag_handling"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout3"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />
</android.support.constraint.ConstraintLayout>
